{%- endif %}
{%- if 'comfy' in infotext %}
	<p>
		<span style="padding-right:0.5em">
			<var style="font-weight:bold;">comfy</var>: {{ infotext['comfy']|e }}
		</span>
	</p>
{%- endif %}
