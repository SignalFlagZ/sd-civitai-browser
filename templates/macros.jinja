
{% macro bgClass(basemodel) %}
{# Return: Class name for base model #}
{# Use trim filter for returned value #}
	{% set dict_modelclass = {
		"SD 1":			"civsfz-bgcolor-SD1",
		"SD 2":			"civsfz-bgcolor-SD2",
		"SD 3":			"civsfz-bgcolor-SD3",
		"SD 3.":		"civsfz-bgcolor-SD35",
		"SDXL":			"civsfz-bgcolor-SDXL",
		"Pony":			"civsfz-bgcolor-Pony",
		"Illustrious":	"civsfz-bgcolor-Illustrious",
		"Flux.1": 		"civsfz-bgcolor-Flux1",
		"BASE": 		"civsfz-bgcolor-base",
	 } %}
	{% for key, val in dict_modelclass.items() %}
		{% if loop.last or key in basemodel %}			
			{{ val }}
			{% break %} {# Using break requires Loop Control extension #}
		{% endif %}
	{% endfor %}
{% endmacro %}
