{% set copy = '<span title="Copy to clipboard" style="cursor: copy;" onclick="civsfz_copyInnerText(this,false);">ðŸ“‹</span>' %}
{% set tdStyle1 = 'style="max-width:20em;min-width:7em;padding:0.2em;"' %}
<div class="civsfz-modelBasicInfo" style="display:flex; align-items:flex-start; column-gap:2em;flex-wrap: wrap;">
	<table>
		<tr>
			<td {{ tdStyle1 }}>Model ID</td>
			<td {{ tdStyle1 }}>{{ copy }}<span>{{ modelInfo["id"] }}</span></td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Civitai link</td>
			<td {{ tdStyle1 }}><a href="https://civitai.com/models/{{ modelInfo['id'] }}?modelVersionId={{ modelInfo["versionId"] }}" target="_blank">https://civitai.com/models/{{
					modelInfo['id'] }}</a></td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Uploaded by</td>
			<td {{ tdStyle1 }}>{{ copy }}<span>{{ modelInfo["creator"]["username"]|e }}</span></td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Published</td>
			<td {{ tdStyle1 }}>{{ published }}</td>

		</tr>
	</table>
	<table>
		<tr>
			<td {{ tdStyle1 }}>Version ID</td>
			<td {{ tdStyle1 }}>{{ copy }}<span>{{ modelInfo["versionId"] }}</span></td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Version</td>
			<td {{ tdStyle1 }}>{{ modelInfo["versionName"]|e }}</td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Type</td>
			<td {{ tdStyle1 }}>{{ modelInfo["type"]|e }}</td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Base Model</td>
			<td {{ tdStyle1 }}>{{ modelInfo["baseModel"]|e }}</td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Tags</td>
			<td {{ tdStyle1 }}>
				{%- for tag in modelInfo['tags'] %}
					<span style="display:inline-block;">
						{{ copy -}}
						<span>{{ tag|e -}}
					</span>
					{%- if not loop.last %}
					,</span>
					{%- else %}
						</span>
					{%- endif %}
				{%- endfor %}
			</td>
<span></span>
</span>
</td>
		</tr>
		<tr>
			<td {{ tdStyle1 }}>Trained Tags</td>
			<td {{ tdStyle1 }}>{{ copy }}<span>{{ ", ".join(modelInfo["trainedWords"])|e }}</span></td>
		</tr>
	</table>
</div>